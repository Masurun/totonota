<%=render partial: "shared/header"%>
    <div class= "about-main">

      <div class="post-show">
  <div class="post-box">
    <h2 class="spa_name">
      <%= @post.spa_name %>
    </h2>
    <div class="post-img-content">
       <%= image_tag @post.image, class: 'images' %>
    </div>

    
    <div class="post-explain-box">
    レビュー<br>
     <%=@post.review%>
    </div>
    <table class="detail-table">
    サウナの情報
      <tbody>
        <tr>
          <th class="detail-post">訪問時間</th>
          <td class="detail-value"><%= @post.visit_time.name %></td>
        </tr>
        <tr>
          <th class="detail-post">混雑具合</th>
          <td class="detail-value"><%= @post.congestion_rate.name %></td>
        </tr>
        
      </tbody>
    </table>
    <%if user_signed_in?%>
    <%if current_user.id==@post.user_id%>
    <ul class = "btn-lists">
    <li><%= link_to "投稿の編集",edit_post_path(@post.id) ,class: "post-red-btn" %></li>
    <li><%= link_to "投稿の削除",post_path(@post.id), class:"post-destroy" ,method: :delete%></li>
    </ul>
    <%end%>
    <%end%>
    
 
